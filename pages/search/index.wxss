.header-search {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* padding: 10rpx 15rpx; */
    position: relative;
    height: 80rpx;
    margin-bottom: 20rpx;
}

.searchContainer {
    padding: 10rpx 20rpx
}

.header-search .searchinput {
    flex: 1;
    background-color: rgba(237, 237, 237, .3);
    margin-right: 20rpx;
    margin-left: 50rpx;
}

.holderclass {
    color: #999;
    font-size: 26rpx;
}

.inputserach {
    padding: 10rpx 15rpx;
    color: #999
}

.header-search .searchIcon {
    position: absolute;
    left: 8rpx;
    top: 25rpx;
}

.header-search .cancel {
    width: 100rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 26rpx;
    padding: 10rpx;
    color: #999
}

.hotsearch {
    /* margin-top: 40rpx; */
}

.hotsearch .hot-title {
    font-size: 28rpx;
    height: 60rpx;
    border-bottom: 2rpx solid #ddd;
    margin-bottom: 0rpx;
}

.hot-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.hot-content .contenlist {
    width: 50%;
    height: 50rpx;
    margin-top: 30rpx;
    line-height: 50rpx;
    font-size: 26rpx;
}

.iconimage {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

.bolder {
    font-weight: bold;
}

.searchItem {
    display: flex;
    align-items: center;
}

.showSearchContent {
    position: absolute;
    width: 100%;
    height: calc(100vh - 80rpx);
    left: 0;
    top: 80rpx;
    background: #fff;
    padding: 0 30rpx;
}

.searchContentlist {
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #d43c33;

}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem {
    /* flex: 1; */
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

.itemnamne {
    margin-left: 20rpx;
}

.searchList {
    /* background-color: red; */
    /* overflow: auto; */
}

.history {
    /* margin-top: -30rpx; */
    padding: 5rpx;
    font-size: 26rpx;
    /* height: 100rpx; */
    overflow: auto;
    display: flex;
    flex-wrap: wrap;
    margin: 20rpx 0;
    /* align-items: center; */
    justify-content: flex-start;
}

.hisTitle,
.deleteitem {
    height: 50rpx;
    line-height: 50rpx;
    margin: 0rpx 0rpx 10rpx 0;
    padding: 0 15rpx;

}


.hisitem {
    background-color: #ededed;
    border-radius: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0rpx 15rpx 20rpx 0;
    padding: 0 30rpx;
    text-align: center;
}