/**index.wxss**/
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.navContainer{
  display: flex;
  justify-content: space-evenly;
}
.nav-item{
  margin:20rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}
.nav-item .title{
  margin-top: 20rpx;
}
.nav-item-list{
  background-color: rgb(240,  19, 19);
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
}
.iconfont{
  font-size: 50rpx;
  color:#Fff
}
.recommenderContainer{
  margin:20rpx 30rpx;
}

.scroll-reco{
  display: flex;
  height: 300rpx;

  margin-top: 10rpx;
}
.recommenderContainer .list{
  width: 200rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  /* margin:10rpx  */
}
.recommenderContainer image{
  width: 200rpx;
  border-radius: 20rpx;
  height: 200rpx;
}
.text-list{
   /* 多行文本溢出 */
   font-size: 26rpx;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;  /* 2行*/
}
.footer{
  margin:20rpx 30rpx;
}
.footer .title{
  margin-top: 15rpx;
}
.list-item{
  display: flex;
  justify-content: flex-start;
  margin-top:15rpx;
}
.list-bg{
  background: #fbfbfb;
  border-radius: 10rpx;
  padding:0rpx 15rpx;
}
.list-item .img{
  width:120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list-item .img image{
 border-radius: 10rpx;
}

.list-item .suoyin{
  width:80rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;

}
